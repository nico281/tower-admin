<% content_for :title, "Notifications" %>
<% content_for :page_title, "Notifications" %>
<% content_for :page_description, "Manage and send notifications to residents" %>

<div>
  <!-- Header -->
  <div class="mb-6 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
    <div class="flex-1">
      <h1 class="text-xl sm:text-2xl font-bold text-gray-900 lg:hidden">Notifications</h1>
      <p class="text-sm text-gray-600 lg:hidden mt-1">Manage and send notifications to residents</p>
    </div>
    <div class="flex items-center space-x-3 w-full sm:w-auto">
      <%= link_to new_notification_path, 
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-gradient-to-r from-blue-600 to-teal-600 hover:from-blue-700 hover:to-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Send Notification
      <% end %>
    </div>
  </div>

  <!-- Success Notice -->
  <% if notice %>
    <div class="mb-6 rounded-lg border border-green-200 bg-green-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Filters -->
  <%= render 'shared/list_filters', 
      path: notifications_path,
      filters: [
        { type: :search, name: :search, label: "Search", placeholder: "Search notifications...", value: params[:search] },
        { type: :select, name: :notification_type, label: "Type", options: [["All Types", ""]] + @notification_types.map {|t| [t.humanize, t]}, value: params[:notification_type] },
        { type: :select, name: :priority, label: "Priority", options: [["All Priorities", ""]] + @priorities.map {|p| [p.humanize, p]}, value: params[:priority] }
      ] %>

  <!-- Notifications List -->
  <div class="bg-white shadow-xl rounded-xl border border-gray-200 overflow-hidden">
    <% if @notifications.any? %>
      <div class="divide-y divide-gray-200">
        <% @notifications.each do |notification| %>
          <div class="p-4 sm:p-6 hover:bg-gray-50 transition duration-150 ease-in-out">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
              <div class="flex-1 min-w-0">
                <div class="flex items-start space-x-3">
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-gradient-to-r 
                      <% case notification.priority %>
                      <% when 'urgent' %>
                        from-red-500 to-red-600
                      <% when 'high' %>
                        from-orange-500 to-orange-600
                      <% when 'normal' %>
                        from-blue-500 to-blue-600
                      <% else %>
                        from-gray-500 to-gray-600
                      <% end %>
                      rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM4.828 4.828A4 4 0 015.5 4H9l1 1 1-1h3.5a4 4 0 01.672.828M4.828 4.828L4 12l.828 7.172M4.828 4.828A4 4 0 014 8v4m15.172 7.172A4 4 0 0120 16v-4a4 4 0 00-.828-3.172M19.172 19.172L20 12l-.828-7.172M19.172 19.172A4 4 0 0115.5 20H12l-1-1-1 1H6.5a4 4 0 01-3.672-.828" />
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center space-x-2 mb-2">
                      <h2 class="text-lg font-semibold text-gray-900 truncate">
                        <%= notification.title %>
                      </h2>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium 
                        <% case notification.priority %>
                        <% when 'urgent' %>
                          bg-red-100 text-red-800
                        <% when 'high' %>
                          bg-orange-100 text-orange-800
                        <% when 'normal' %>
                          bg-blue-100 text-blue-800
                        <% else %>
                          bg-gray-100 text-gray-800
                        <% end %>
                        ">
                        <%= notification.priority.humanize %>
                      </span>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <%= notification.notification_type.humanize %>
                      </span>
                    </div>
                    <div class="mt-1 flex flex-wrap items-center gap-x-4 gap-y-2 text-sm text-gray-500">
                      <div class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                        <%= notification.target_description %>
                      </div>
                      <div class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        Sent by <%= notification.sender.display_name %>
                      </div>
                      <div class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4h3a2 2 0 012 2v1a2 2 0 01-2 2H6a2 2 0 01-2-2V9a2 2 0 012-2h2z" />
                        </svg>
                        <%= time_ago_in_words(notification.created_at) %> ago
                      </div>
                      <% if notification.sent? %>
                        <div class="flex items-center">
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                          </svg>
                          <%= notification.total_recipients %> recipients
                          <% if notification.read_count && notification.read_count > 0 %>
                            â€¢ <%= notification.read_percentage %>% read
                          <% end %>
                        </div>
                      <% else %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                          Draft
                        </span>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="flex items-center space-x-3">
                <%= link_to notification_path(notification), 
                    class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  View
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <%= render 'shared/pagy_pagination', 
          pagy: @pagy,
          item_name: "notifications" %>
    <% else %>
      <div class="text-center py-12">
        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM4.828 4.828A4 4 0 015.5 4H9l1 1 1-1h3.5a4 4 0 01.672.828M4.828 4.828L4 12l.828 7.172M4.828 4.828A4 4 0 014 8v4m15.172 7.172A4 4 0 0120 16v-4a4 4 0 00-.828-3.172M19.172 19.172L20 12l-.828-7.172M19.172 19.172A4 4 0 0115.5 20H12l-1-1-1 1H6.5a4 4 0 01-3.672-.828" />
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No notifications yet</h3>
        <p class="text-gray-500 mb-6">Start communicating with your residents by sending your first notification.</p>
        <%= link_to new_notification_path, 
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-gradient-to-r from-blue-600 to-teal-600 hover:from-blue-700 hover:to-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Send First Notification
        <% end %>
      </div>
    <% end %>
  </div>
</div>
