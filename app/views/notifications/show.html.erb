<% content_for :title, @notification.title %>
<% content_for :page_title, "Notification Details" %>
<% content_for :page_description, "View notification details and delivery statistics" %>

<div>
  <!-- Back button -->
  <div class="mb-6">
    <%= link_to notifications_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition duration-150 ease-in-out" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Notifications
    <% end %>
  </div>

  <!-- Notification Header Card -->
  <div class="bg-white shadow-xl rounded-xl border border-gray-200 overflow-hidden mb-6">
    <div class="p-6 sm:p-8">
      <div class="flex items-start justify-between mb-6">
        <div class="flex-1">
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2">
            <%= @notification.title %>
          </h1>

          <!-- Badges -->
          <div class="flex flex-wrap items-center gap-2 mb-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
              <% case @notification.priority %>
              <% when 'urgent' %>
                bg-red-100 text-red-800
              <% when 'high' %>
                bg-orange-100 text-orange-800
              <% when 'normal' %>
                bg-blue-100 text-blue-800
              <% else %>
                bg-gray-100 text-gray-800
              <% end %>
              ">
              <%= @notification.priority.humanize %> Priority
            </span>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              <%= @notification.notification_type.humanize %>
            </span>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4h3a2 2 0 012 2v1a2 2 0 01-2 2H6a2 2 0 01-2-2V9a2 2 0 012-2h2z" />
              </svg>
              Sent <%= time_ago_in_words(@notification.created_at) %> ago
            </span>
          </div>

          <!-- Metadata -->
          <div class="flex flex-wrap items-center gap-x-6 gap-y-2 text-sm text-gray-500">
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              Created by <%= @notification.sender&.display_name || "Unknown" %>
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <% case @notification.target_type %>
              <% when 'Company' %>
                Sent to all residents
              <% when 'Building' %>
                Sent to <%= @notification.target.name %>
              <% when 'Apartment' %>
                Sent to Apartment <%= @notification.target.number %> in <%= @notification.target.building.name %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Message content -->
      <div class="prose max-w-none">
        <h3 class="text-lg font-medium text-gray-900 mb-3">Message:</h3>
        <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
          <p class="text-gray-900 leading-relaxed whitespace-pre-line text-base">
            <%= @notification.message %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Delivery Statistics -->
  <div class="bg-white shadow-xl rounded-xl border border-gray-200 overflow-hidden mb-6">
    <div class="p-6 sm:p-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Delivery Statistics</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <!-- Total Recipients -->
        <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-blue-600">Total Recipients</p>
              <p class="text-2xl font-semibold text-blue-900"><%= @notification.total_recipients %></p>
            </div>
          </div>
        </div>

        <!-- Read Count -->
        <div class="bg-green-50 rounded-lg p-4 border border-green-200">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-green-600">Read</p>
              <p class="text-2xl font-semibold text-green-900">
                <%= @notification.read_count %>
                <% if @notification.total_recipients > 0 %>
                  <span class="text-sm text-green-600">
                    (<%= number_to_percentage((@notification.read_count.to_f / @notification.total_recipients) * 100, precision: 1) %>)
                  </span>
                <% end %>
              </p>
            </div>
          </div>
        </div>

        <!-- Unread Count -->
        <div class="bg-orange-50 rounded-lg p-4 border border-orange-200">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="w-8 h-8 text-orange-600" fill="currentColor" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="8"/>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-orange-600">Unread</p>
              <p class="text-2xl font-semibold text-orange-900">
                <%= @notification.unread_count %>
                <% if @notification.total_recipients > 0 %>
                  <span class="text-sm text-orange-600">
                    (<%= number_to_percentage((@notification.unread_count.to_f / @notification.total_recipients) * 100, precision: 1) %>)
                  </span>
                <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Progress Bar -->
      <div class="w-full bg-gray-200 rounded-full h-3 mb-4">
        <% read_percentage = @notification.total_recipients > 0 ? (@notification.read_count.to_f / @notification.total_recipients) * 100 : 0 %>
        <div class="bg-green-500 h-3 rounded-full transition-all duration-500 ease-in-out" style="width: <%= read_percentage %>%"></div>
      </div>
      <p class="text-sm text-gray-600 text-center">
        <%= number_to_percentage(read_percentage, precision: 1) %> of recipients have read this notification
      </p>
    </div>
  </div>

  <!-- Recipients List -->
  <div class="bg-white shadow-xl rounded-xl border border-gray-200 overflow-hidden">
    <div class="p-6 sm:p-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Recipients</h2>
      
      <% recipients = @notification.notification_recipients.includes(resident: [:apartment, :user]).order('notification_recipients.read_at DESC NULLS LAST') %>
      <% if recipients.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Resident</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Apartment</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Read At</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% recipients.each do |recipient| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-8 w-8">
                        <div class="h-8 w-8 rounded-full bg-gray-300 flex items-center justify-center">
                          <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                          </svg>
                        </div>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900">
                          <%= recipient.resident.display_name %>
                        </div>
                        <div class="text-sm text-gray-500">
                          <%= recipient.resident.email %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= recipient.resident.apartment.building.name %>
                    </div>
                    <div class="text-sm text-gray-500">
                      Apartment <%= recipient.resident.apartment.number %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if recipient.read? %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Read
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 24 24">
                          <circle cx="12" cy="12" r="8"/>
                        </svg>
                        Unread
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <% if recipient.read? %>
                      <%= time_ago_in_words(recipient.read_at) %> ago
                    <% else %>
                      -
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No recipients found</h3>
          <p class="text-gray-500">This notification has no recipients.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>