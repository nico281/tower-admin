<%= form_with(model: company, class: "space-y-6") do |form| %>
  <% if company.errors.any? %>
    <div class="p-4 mb-6 text-sm text-red-700 bg-red-100 rounded-lg">
      <h2 class="font-semibold"><%= pluralize(company.errors.count, "error") %> prevented this company from being saved:</h2>
      <ul class="list-disc list-inside mt-2">
        <% company.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Company Name -->
  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <!-- Plan -->
<div class="mb-4">
  <%= form.label :plan, class: "block text-sm font-medium text-gray-700 mb-1" %>
  <%= form.select :plan, Company.plans.keys.map { |p| [p.titleize, p] },
        {}, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  <% if @company.errors[:plan].any? %>
    <p class="text-red-600 text-sm mt-1"><%= @company.errors[:plan].first %></p>
  <% end %>
</div>  

<!-- Max Buildings -->
  <div>
    <%= form.label :max_buildings, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :max_buildings, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <!-- Domain -->
  <div>
    <%= form.label :domain, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :domain, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <!-- Subdomain -->
  <div>
    <%= form.label :subdomain, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :subdomain, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <!-- Submit -->
  <div>
    <%= form.submit "Save Company", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
