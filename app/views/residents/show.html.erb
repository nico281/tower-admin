<% content_for :title, [[@resident.first_name, @resident.last_name].compact.join(' ').presence, @resident.email].compact.first %>
<% content_for :page_title, [[@resident.first_name, @resident.last_name].compact.join(' ').presence, @resident.email].compact.first %>
<% content_for :page_description, "Resident details and payment history" %>

<div>
  <!-- Success Notice -->
  <% if notice %>
    <div class="mb-6 rounded-lg border border-green-200 bg-green-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Header Actions -->
  <div class="mb-6 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
    <div class="flex-1">
      <h1 class="text-xl sm:text-2xl font-bold text-gray-900 lg:hidden">
        <%= [[@resident.first_name, @resident.last_name].compact.join(' ').presence, @resident.email].compact.first %>
      </h1>
    </div>
    <div class="flex items-center space-x-3 w-full sm:w-auto">
      <%= link_to edit_resident_path(@resident), 
          class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit Resident
      <% end %>
      <%= button_to @resident, 
          method: :delete, 
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out",
          data: { 
            confirm: "Are you sure you want to delete this resident? This action cannot be undone.",
            turbo_confirm: "Are you sure you want to delete this resident? This action cannot be undone."
          } do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Delete Resident
      <% end %>
      <%= link_to residents_path, 
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-gradient-to-r from-blue-600 to-teal-600 hover:from-blue-700 hover:to-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Residents
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Resident Information -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Basic Information -->
      <div class="bg-white shadow-xl rounded-xl border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-green-600 to-blue-600">
          <h2 class="text-lg font-semibold text-white">Resident Information</h2>
        </div>
        <div class="px-6 py-6">
          <dl class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <dt class="text-sm font-medium text-gray-500">Name</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= [[@resident.first_name, @resident.last_name].compact.join(' ').presence, "N/A"].compact.first %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Email</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <a href="mailto:<%= @resident.email %>" class="text-blue-600 hover:text-blue-800">
                  <%= @resident.email %>
                </a>
              </dd>
            </div>
            <% if @resident.phone.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Phone</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <a href="tel:<%= @resident.phone %>" class="text-blue-600 hover:text-blue-800">
                    <%= @resident.phone %>
                  </a>
                </dd>
              </div>
            <% end %>
            <% if @resident.date_of_birth.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Date of Birth</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @resident.date_of_birth.strftime("%B %d, %Y") %></dd>
              </div>
            <% end %>
            <% if @resident.emergency_contact.present? %>
              <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500">Emergency Contact</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @resident.emergency_contact %></dd>
              </div>
            <% end %>
            <% if @resident.notes.present? %>
              <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500">Notes</dt>
                <dd class="mt-1 text-sm text-gray-900 whitespace-pre-wrap"><%= @resident.notes %></dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>

      <!-- Payment History -->
      <div class="bg-white shadow-xl rounded-xl border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-green-600 to-blue-600 flex items-center justify-between">
          <h2 class="text-lg font-semibold text-white">Payment History</h2>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-white/20 text-white">
            <%= pluralize(@payments.count, 'payment') %>
          </span>
        </div>
        <div class="divide-y divide-gray-200">
          <% if @payments.any? %>
            <% @payments.limit(5).each do |payment| %>
              <div class="px-6 py-4">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm font-medium text-gray-900">
                      Payment #<%= payment.id %>
                    </p>
                    <p class="text-xs text-gray-500">
                      <%= payment.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                    </p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-semibold text-green-600">
                      $<%= number_with_precision(payment.amount, precision: 2) if payment.respond_to?(:amount) %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
            <% if @payments.count > 5 %>
              <div class="px-6 py-4 bg-gray-50 text-center">
                <p class="text-sm text-gray-500">
                  and <%= @payments.count - 5 %> more payments...
                </p>
              </div>
            <% end %>
          <% else %>
            <div class="px-6 py-8 text-center">
              <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              <h3 class="text-sm font-medium text-gray-900 mb-1">No payments yet</h3>
              <p class="text-sm text-gray-500">Payment history will appear here once payments are made.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Apartment Information -->
    <div class="space-y-6">
      <div class="bg-white shadow-xl rounded-xl border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-blue-600 to-teal-600">
          <h2 class="text-lg font-semibold text-white">Apartment Details</h2>
        </div>
        <div class="px-6 py-6">
          <div class="text-center mb-4">
            <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-teal-500 rounded-lg flex items-center justify-center mx-auto mb-3">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M9 7l3-3 3 3M4 10h16v11H4V10z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">
              Apartment <%= @resident.apartment.number || @resident.apartment.id %>
            </h3>
            <p class="text-sm text-gray-500"><%= @resident.apartment.building.name %></p>
          </div>
          
          <div class="space-y-3">
            <div class="flex justify-between items-center text-sm">
              <span class="text-gray-500">Building:</span>
              <span class="font-medium text-gray-900"><%= @resident.apartment.building.name %></span>
            </div>
            <% if @resident.apartment.floor.present? %>
              <div class="flex justify-between items-center text-sm">
                <span class="text-gray-500">Floor:</span>
                <span class="font-medium text-gray-900"><%= @resident.apartment.floor %></span>
              </div>
            <% end %>
            <% if @resident.apartment.bedrooms.present? %>
              <div class="flex justify-between items-center text-sm">
                <span class="text-gray-500">Bedrooms:</span>
                <span class="font-medium text-gray-900"><%= @resident.apartment.bedrooms %></span>
              </div>
            <% end %>
            <% if @resident.apartment.bathrooms.present? %>
              <div class="flex justify-between items-center text-sm">
                <span class="text-gray-500">Bathrooms:</span>
                <span class="font-medium text-gray-900"><%= @resident.apartment.bathrooms %></span>
              </div>
            <% end %>
          </div>

          <div class="mt-6 pt-4 border-t border-gray-200">
            <%= link_to apartment_path(@resident.apartment), 
                class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              View Apartment
            <% end %>
          </div>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="bg-white shadow-xl rounded-xl border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-green-600 to-blue-600">
          <h2 class="text-lg font-semibold text-white">Quick Stats</h2>
        </div>
        <div class="px-6 py-6 space-y-4">
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500">Member since:</span>
            <span class="text-sm font-medium text-gray-900">
              <%= @resident.created_at.strftime("%B %Y") %>
            </span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500">Total payments:</span>
            <span class="text-sm font-medium text-gray-900">
              <%= @payments.count %>
            </span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500">Last updated:</span>
            <span class="text-sm font-medium text-gray-900">
              <%= time_ago_in_words(@resident.updated_at) %> ago
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>