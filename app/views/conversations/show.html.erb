<%= turbo_stream_from ["conversation", @conversation.id] %>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <div class="lg:col-span-2">
    <div class="bg-white shadow-xl rounded-xl border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 bg-gradient-to-r from-blue-600 to-teal-600 flex items-center justify-between">
        <h1 class="text-lg font-semibold text-white">Chat with <%= @conversation.resident.display_name %></h1>
        <%= link_to "Back to Conversations", conversations_path, class: "text-white/90 text-sm hover:underline" %>
      </div>

      <div id="<%= dom_id(@conversation, :messages) %>" class="px-6 py-4 space-y-3 max-h-[60vh] overflow-y-auto">
        <%= render partial: "messages/message", collection: @messages, as: :message %>
      </div>

      <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
        <%= form_with(model: [@conversation, @message], data: { turbo: true }) do |f| %>
          <div class="flex gap-3">
            <%= f.text_area :body, rows: 2, class: "flex-1 rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500", placeholder: "Type your message..." %>
            <%= f.submit "Send", class: "px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700" %>
          </div>
        <% end %>
        <script>
          // Auto-scroll to bottom on load and on new messages
          const container = document.getElementById('<%= dom_id(@conversation, :messages) %>');
          if (container) container.scrollTop = container.scrollHeight;
          document.addEventListener('turbo:before-stream-render', (e) => {
            const target = e.target.getAttribute('target');
            if (target === '<%= dom_id(@conversation, :messages) %>') {
              requestAnimationFrame(() => {
                const c = document.getElementById(target);
                if (c) c.scrollTop = c.scrollHeight;
              });
            }
          });
        </script>
      </div>
    </div>
  </div>

  <div class="space-y-6">
    <div class="bg-white shadow-xl rounded-xl border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 bg-gradient-to-r from-green-600 to-blue-600">
        <h2 class="text-lg font-semibold text-white">Resident Info</h2>
      </div>
      <div class="px-6 py-6 text-sm">
        <div class="font-medium"><%= @conversation.resident.display_name %></div>
        <div class="text-gray-500"><%= @conversation.resident.email %></div>
        <% if @conversation.resident.apartment %>
          <div class="mt-2 text-gray-600">Apartment: <%= @conversation.resident.apartment.number || @conversation.resident.apartment.id %>, <%= @conversation.resident.apartment.building.name %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
