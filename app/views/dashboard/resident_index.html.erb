<% content_for :title, "Bienvenido, #{@resident.display_name}" %>
<% content_for :page_title, "Mi Dashboard" %>
<% content_for :page_description, "Información de tu apartamento y estado de cuenta" %>

<div>
  <!-- Welcome Section -->
  <div class="bg-gradient-to-r from-green-600 to-blue-600 rounded-xl shadow-lg p-6 mb-8 text-white">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold">¡Hola, <%= @resident.display_name %>! 👋</h1>
        <p class="text-green-100 mt-1">Bienvenido a tu portal de residente</p>
      </div>
      <div class="text-right">
        <p class="text-green-100 text-sm">Edificio</p>
        <p class="text-xl font-semibold"><%= @building.name %></p>
      </div>
    </div>
  </div>

  <!-- Info Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <!-- Apartment Info -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M9 7l3-3 3 3M4 10h16v11H4V10z" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-xl font-bold text-gray-900">Apartamento <%= @apartment.number %></h3>
          <p class="text-sm text-gray-600">Tu hogar</p>
        </div>
      </div>
      <div class="mt-4 space-y-2">
        <% if @apartment.floor.present? %>
          <p class="text-sm text-gray-700"><strong>Piso:</strong> <%= @apartment.floor %></p>
        <% end %>
        <% if @apartment.bedrooms.present? %>
          <p class="text-sm text-gray-700"><strong>Habitaciones:</strong> <%= @apartment.bedrooms %></p>
        <% end %>
        <% if @apartment.bathrooms.present? %>
          <p class="text-sm text-gray-700"><strong>Baños:</strong> <%= @apartment.bathrooms %></p>
        <% end %>
      </div>
    </div>

    <!-- Total Payments -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-2xl font-bold text-gray-900"><%= @recent_payments.count %></h3>
          <p class="text-sm text-gray-600">Pagos registrados</p>
        </div>
      </div>
    </div>

    <!-- Pending Payments -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-2xl font-bold text-gray-900"><%= @pending_payments.count %></h3>
          <p class="text-sm text-gray-600">Pagos pendientes</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Payments -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 bg-gradient-to-r from-green-600 to-blue-600 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-white">Pagos Recientes</h2>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-white/20 text-white">
          <%= pluralize(@recent_payments.count, 'pago') %>
        </span>
      </div>
      <div class="divide-y divide-gray-200">
        <% if @recent_payments.any? %>
          <% @recent_payments.each do |payment| %>
            <div class="px-6 py-4">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-900">
                    Pago #<%= payment.id %>
                  </p>
                  <p class="text-xs text-gray-500">
                    <%= payment.created_at.strftime("%d de %B, %Y") %>
                  </p>
                </div>
                <div class="text-right">
                  <p class="text-sm font-semibold text-green-600">
                    $<%= number_with_precision(payment.amount, precision: 2) %>
                  </p>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= payment.paid? ? 'bg-green-100 text-green-800' : payment.pending? ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
                    <%= payment.payment_status.humanize %>
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="px-6 py-8 text-center">
            <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <h3 class="text-sm font-medium text-gray-900 mb-1">No hay pagos aún</h3>
            <p class="text-sm text-gray-500">El historial de pagos aparecerá aquí.</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Contact Information -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 bg-gradient-to-r from-blue-600 to-purple-600">
        <h2 class="text-lg font-semibold text-white">Mi Información</h2>
      </div>
      <div class="px-6 py-6 space-y-4">
        <div>
          <label class="text-sm font-medium text-gray-500">Nombre completo</label>
          <p class="text-sm text-gray-900"><%= @resident.display_name %></p>
        </div>
        <div>
          <label class="text-sm font-medium text-gray-500">Email</label>
          <p class="text-sm text-gray-900">
            <a href="mailto:<%= @resident.email %>" class="text-blue-600 hover:text-blue-800">
              <%= @resident.email %>
            </a>
          </p>
        </div>
        <% if @resident.phone.present? %>
          <div>
            <label class="text-sm font-medium text-gray-500">Teléfono</label>
            <p class="text-sm text-gray-900">
              <a href="tel:<%= @resident.phone %>" class="text-blue-600 hover:text-blue-800">
                <%= @resident.phone %>
              </a>
            </p>
          </div>
        <% end %>
        <div class="pt-4 border-t border-gray-200">
          <p class="text-xs text-gray-500">
            <strong>Edificio:</strong> <%= @building.name %><br>
            <strong>Dirección:</strong> <%= @building.address %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mt-8 bg-gray-50 rounded-xl p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">¿Necesitas ayuda?</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex items-center space-x-3">
        <div class="flex-shrink-0">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-900">¿Tienes preguntas?</p>
          <p class="text-sm text-gray-500">Contacta a la administración del edificio</p>
        </div>
      </div>
      <div class="flex items-center space-x-3">
        <div class="flex-shrink-0">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-900">Cuenta creada exitosamente</p>
          <p class="text-sm text-gray-500">Ya puedes acceder a tu información</p>
        </div>
      </div>
    </div>
  </div>
</div>