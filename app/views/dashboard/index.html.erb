<% content_for :title, "#{@company&.name || 'Company'} Dashboard" %>
<% content_for :page_title, "Dashboard" %>
<% content_for :page_description, "Overview of your property management system" %>

<div>
  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- Buildings Card -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-2xl font-bold text-gray-900"><%= @buildings_count %></h3>
          <p class="text-sm text-gray-600">Buildings</p>
        </div>
      </div>
      <div class="mt-4">
        <%= link_to buildings_path, class: "text-sm text-blue-600 hover:text-blue-800 font-medium" do %>
          View all buildings →
        <% end %>
      </div>
    </div>

    <!-- Apartments Card -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M9 7l3-3 3 3M4 10h16v11H4V10z" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-2xl font-bold text-gray-900"><%= @apartments_count %></h3>
          <p class="text-sm text-gray-600">Apartments</p>
        </div>
      </div>
      <div class="mt-4">
        <%= link_to apartments_path, class: "text-sm text-teal-600 hover:text-teal-800 font-medium" do %>
          View all apartments →
        <% end %>
      </div>
    </div>

    <!-- Users Card -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-2xl font-bold text-gray-900"><%= @users_count %></h3>
          <p class="text-sm text-gray-600">Users</p>
        </div>
      </div>
      <div class="mt-4">
        <%= link_to tenant_users_path, class: "text-sm text-purple-600 hover:text-purple-800 font-medium" do %>
          View all users →
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Activity Section -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Buildings -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-gray-900">Recent Buildings</h3>
          <%= link_to buildings_path, class: "text-sm text-blue-600 hover:text-blue-800 font-medium" do %>
            View all
          <% end %>
        </div>
      </div>
      <div class="px-6 py-4">
        <% if @recent_buildings.any? %>
          <div class="space-y-3">
            <% @recent_buildings.each do |building| %>
              <div class="flex items-center justify-between py-2">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= building.name %></p>
                    <p class="text-xs text-gray-500">Added <%= time_ago_in_words(building.created_at) %> ago</p>
                  </div>
                </div>
                <%= link_to building_path(building), class: "text-xs text-blue-600 hover:text-blue-800" do %>
                  View
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <p class="text-sm text-gray-500 mb-3">No buildings yet</p>
            <%= link_to new_building_path, class: "text-sm text-blue-600 hover:text-blue-800 font-medium" do %>
              Add your first building
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Users -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-gray-900">Recent Users</h3>
          <%= link_to tenant_users_path, class: "text-sm text-purple-600 hover:text-purple-800 font-medium" do %>
            View all
          <% end %>
        </div>
      </div>
      <div class="px-6 py-4">
        <% if @recent_users.any? %>
          <div class="space-y-3">
            <% @recent_users.each do |user| %>
              <div class="flex items-center justify-between py-2">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
                    <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= user.email %></p>
                    <p class="text-xs text-gray-500">
                      <%= user.role&.humanize || 'User' %> • Added <%= time_ago_in_words(user.created_at) %> ago
                    </p>
                  </div>
                </div>
                <%= link_to tenant_user_path(user), class: "text-xs text-purple-600 hover:text-purple-800" do %>
                  View
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <p class="text-sm text-gray-500 mb-3">No users yet</p>
            <%= link_to new_tenant_user_path, class: "text-sm text-purple-600 hover:text-purple-800 font-medium" do %>
              Add your first user
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mt-8 bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      <%= link_to new_building_path, class: "inline-flex items-center px-4 py-3 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Add Building
      <% end %>
      
      <%= link_to new_apartment_path, class: "inline-flex items-center px-4 py-3 border border-gray-300 text-sm font-medium rounded-lg shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Add Apartment
      <% end %>
      
      <%= link_to new_tenant_user_path, class: "inline-flex items-center px-4 py-3 border border-gray-300 text-sm font-medium rounded-lg shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Add User
      <% end %>
    </div>
  </div>
</div>