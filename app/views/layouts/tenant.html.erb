<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "#{ActsAsTenant.current_tenant&.name || 'Company'} Dashboard" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="bg-gray-50">

    <div class="flex h-screen">
      <!-- Sidebar -->
      <nav id="sidebar" class="fixed lg:relative lg:translate-x-0 transform -translate-x-full lg:w-64 w-64 h-full bg-gradient-to-b from-blue-900 via-blue-800 to-teal-900 shadow-xl z-40 transition-transform duration-300 ease-in-out">
        <!-- Logo/Header -->
        <div class="px-6 py-8">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <div>
              <h1 class="text-white text-xl font-bold"><%= ActsAsTenant.current_tenant&.name || 'Company' %></h1>
              <p class="text-blue-200 text-sm">
                <% if current_user&.resident? %>
                  Portal de Residente
                <% else %>
                  Management Dashboard
                <% end %>
              </p>
            </div>
          </div>
        </div>

        <!-- Navigation Menu -->
        <div class="px-3">
          <div class="space-y-1">
            <!-- Dashboard -->
            <%= link_to tenant_root_path, 
                class: "#{request.path == '/' ? 'bg-blue-700 text-blue-100' : 'text-blue-200 hover:bg-blue-700 hover:text-blue-100'} group flex items-center px-3 py-3 text-sm font-medium rounded-lg transition duration-150 ease-in-out" do %>
              <svg class="#{request.path == '/' ? 'text-blue-100' : 'text-blue-300 group-hover:text-blue-100'} mr-3 flex-shrink-0 h-5 w-5 transition duration-150 ease-in-out" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v3H8V5z" />
              </svg>
              Dashboard
              <% if request.path == '/' %>
                <svg class="ml-auto h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              <% end %>
            <% end %>

            <% if current_user&.resident? %>
              <!-- Resident Menu Items -->

              <!-- Mi Chat -->
              <%= link_to resident_chat_path,
                  class: "#{request.path.starts_with?('/my_chat') ? 'bg-blue-700 text-blue-100' : 'text-blue-200 hover:bg-blue-700 hover:text-blue-100'} group flex items-center px-3 py-3 text-sm font-medium rounded-lg transition duration-150 ease-in-out" do %>
                <svg class="#{request.path.starts_with?('/my_chat') ? 'text-blue-100' : 'text-blue-300 group-hover:text-blue-100'} mr-3 flex-shrink-0 h-5 w-5 transition duration-150 ease-in-out" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h6m5 8l-4-4H6a2 2 0 01-2-2V6a2 2 0 012-2h12a2 2 0 012 2v12z" />
                </svg>
                Mi Chat
                <% if request.path.starts_with?('/my_chat') %>
                  <svg class="ml-auto h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                <% end %>
              <% end %>
              
              <!-- Mi Información -->
              <a href="#" class="text-blue-200 hover:bg-blue-700 hover:text-blue-100 group flex items-center px-3 py-3 text-sm font-medium rounded-lg transition duration-150 ease-in-out">
                <svg class="text-blue-300 group-hover:text-blue-100 mr-3 flex-shrink-0 h-5 w-5 transition duration-150 ease-in-out" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Mi Información
              </a>

              <!-- Mis Pagos -->
              <a href="#" class="text-blue-200 hover:bg-blue-700 hover:text-blue-100 group flex items-center px-3 py-3 text-sm font-medium rounded-lg transition duration-150 ease-in-out">
                <svg class="text-blue-300 group-hover:text-blue-100 mr-3 flex-shrink-0 h-5 w-5 transition duration-150 ease-in-out" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                Mis Pagos
              </a>

              <!-- Notificaciones -->
              <%= link_to resident_notifications_path, 
                  class: "#{request.path.starts_with?('/my_notifications') ? 'bg-blue-700 text-blue-100' : 'text-blue-200 hover:bg-blue-700 hover:text-blue-100'} group flex items-center px-3 py-3 text-sm font-medium rounded-lg transition duration-150 ease-in-out" do %>
                <svg class="#{request.path.starts_with?('/my_notifications') ? 'text-blue-100' : 'text-blue-300 group-hover:text-blue-100'} mr-3 flex-shrink-0 h-5 w-5 transition duration-150 ease-in-out" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM4.828 4.828A4 4 0 015.5 4H9l1 1 1-1h3.5a4 4 0 01.672.828M4.828 4.828L4 12l.828 7.172M4.828 4.828A4 4 0 014 8v4m15.172 7.172A4 4 0 0120 16v-4a4 4 0 00-.828-3.172M19.172 19.172L20 12l-.828-7.172M19.172 19.172A4 4 0 0115.5 20H12l-1-1-1 1H6.5a4 4 0 01-3.672-.828" />
                </svg>
                Notificaciones
                <% if current_user&.resident? && current_user.resident.unread_notifications_count > 0 %>
                  <span class="ml-auto inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-600 text-white">
                    <%= current_user.resident.unread_notifications_count %>
                  </span>
                <% elsif request.path.starts_with?('/my_notifications') %>
                  <svg class="ml-auto h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                <% end %>
              <% end %>

            <% else %>
              <!-- Admin Menu Items -->
              
              <!-- Buildings -->
              <%= link_to buildings_path, 
                  class: "#{request.path.starts_with?('/buildings') ? 'bg-blue-700 text-blue-100' : 'text-blue-200 hover:bg-blue-700 hover:text-blue-100'} group flex items-center px-3 py-3 text-sm font-medium rounded-lg transition duration-150 ease-in-out" do %>
                <svg class="#{request.path.starts_with?('/buildings') ? 'text-blue-100' : 'text-blue-300 group-hover:text-blue-100'} mr-3 flex-shrink-0 h-5 w-5 transition duration-150 ease-in-out" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                Buildings
                <% if request.path.starts_with?('/buildings') %>
                  <svg class="ml-auto h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                <% end %>
              <% end %>

              <!-- Apartments -->
              <%= link_to apartments_path, 
                  class: "#{request.path.starts_with?('/apartments') ? 'bg-blue-700 text-blue-100' : 'text-blue-200 hover:bg-blue-700 hover:text-blue-100'} group flex items-center px-3 py-3 text-sm font-medium rounded-lg transition duration-150 ease-in-out" do %>
                <svg class="#{request.path.starts_with?('/apartments') ? 'text-blue-100' : 'text-blue-300 group-hover:text-blue-100'} mr-3 flex-shrink-0 h-5 w-5 transition duration-150 ease-in-out" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M9 7l3-3 3 3M4 10h16v11H4V10z" />
                </svg>
                Apartments
                <% if request.path.starts_with?('/apartments') %>
                  <svg class="ml-auto h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                <% end %>
              <% end %>

              <!-- Residents -->
              <%= link_to residents_path, 
                  class: "#{request.path.starts_with?('/residents') ? 'bg-blue-700 text-blue-100' : 'text-blue-200 hover:bg-blue-700 hover:text-blue-100'} group flex items-center px-3 py-3 text-sm font-medium rounded-lg transition duration-150 ease-in-out" do %>
                <svg class="#{request.path.starts_with?('/residents') ? 'text-blue-100' : 'text-blue-300 group-hover:text-blue-100'} mr-3 flex-shrink-0 h-5 w-5 transition duration-150 ease-in-out" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                Residents
                <% if request.path.starts_with?('/residents') %>
                  <svg class="ml-auto h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                <% end %>
              <% end %>

              <!-- Conversations -->
              <%= link_to conversations_path, 
                  class: "#{request.path.starts_with?('/conversations') ? 'bg-blue-700 text-blue-100' : 'text-blue-200 hover:bg-blue-700 hover:text-blue-100'} group flex items-center px-3 py-3 text-sm font-medium rounded-lg transition duration-150 ease-in-out" do %>
                <svg class="#{request.path.starts_with?('/conversations') ? 'text-blue-100' : 'text-blue-300 group-hover:text-blue-100'} mr-3 flex-shrink-0 h-5 w-5 transition duration-150 ease-in-out" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h6m5 8l-4-4H6a2 2 0 01-2-2V6a2 2 0 012-2h12a2 2 0 012 2v12z" />
                </svg>
                Conversations
                <% if request.path.starts_with?('/conversations') %>
                  <svg class="ml-auto h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                <% end %>
              <% end %>

              <!-- Users -->
              <% users_active = request.path.starts_with?('/users') && !request.path.starts_with?('/users/sign') %>
              <%= link_to tenant_users_path, 
                  class: "#{users_active ? 'bg-blue-700 text-blue-100' : 'text-blue-200 hover:bg-blue-700 hover:text-blue-100'} group flex items-center px-3 py-3 text-sm font-medium rounded-lg transition duration-150 ease-in-out" do %>
                <svg class="#{users_active ? 'text-blue-100' : 'text-blue-300 group-hover:text-blue-100'} mr-3 flex-shrink-0 h-5 w-5 transition duration-150 ease-in-out" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Users
                <% if users_active %>
                  <svg class="ml-auto h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                <% end %>
              <% end %>

              <!-- Notifications -->
              <%= link_to notifications_path, 
                  class: "#{request.path.starts_with?('/notifications') ? 'bg-blue-700 text-blue-100' : 'text-blue-200 hover:bg-blue-700 hover:text-blue-100'} group flex items-center px-3 py-3 text-sm font-medium rounded-lg transition duration-150 ease-in-out" do %>
                <svg class="#{request.path.starts_with?('/notifications') ? 'text-blue-100' : 'text-blue-300 group-hover:text-blue-100'} mr-3 flex-shrink-0 h-5 w-5 transition duration-150 ease-in-out" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM4.828 4.828A4 4 0 015.5 4H9l1 1 1-1h3.5a4 4 0 01.672.828M4.828 4.828L4 12l.828 7.172M4.828 4.828A4 4 0 014 8v4m15.172 7.172A4 4 0 0120 16v-4a4 4 0 00-.828-3.172M19.172 19.172L20 12l-.828-7.172M19.172 19.172A4 4 0 0115.5 20H12l-1-1-1 1H6.5a4 4 0 01-3.672-.828" />
                </svg>
                Notifications
                <% if request.path.starts_with?('/notifications') %>
                  <svg class="ml-auto h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- User Profile & Logout -->
        <div class="absolute bottom-0 w-64 p-4">
          <div class="bg-blue-800 bg-opacity-60 rounded-lg p-4 backdrop-blur-sm border border-blue-700">
            <div class="flex items-center space-x-3 mb-3">
              <div class="w-8 h-8 bg-blue-700 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-blue-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-blue-100 truncate">
                  <%= current_user&.display_name %>
                </p>
                <p class="text-xs text-blue-200">
                  <%= current_user&.role&.humanize || 'User' %>
                </p>
              </div>
            </div>
            <div class="flex space-x-2">
              <%= button_to destroy_user_session_path, method: :delete, 
                  class: "flex-1 flex items-center justify-center px-3 py-2 border border-blue-600 text-xs font-medium rounded-md text-blue-200 hover:text-white hover:bg-blue-700 hover:border-blue-700 transition duration-150 ease-in-out" do %>
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                Sign Out
              <% end %>
            </div>
          </div>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="flex-1 overflow-auto">
        <!-- Top Header -->
        <header class="bg-white shadow-sm border-b border-gray-200">
          <div class="flex items-center justify-between px-4 sm:px-6 py-4">
            <!-- Mobile menu button and title -->
            <div class="flex items-center space-x-3 flex-1">
              <!-- Mobile menu button -->
              <button id="mobile-menu-button" class="lg:hidden p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500 transition-colors duration-200">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
              </button>
              
              <!-- Page title -->
              <div class="flex-1">
                <h1 class="text-xl lg:text-2xl font-bold text-gray-900">
                  <%= content_for?(:page_title) ? yield(:page_title) : "Dashboard" %>
                </h1>
                <% if content_for?(:page_description) %>
                  <p class="text-sm text-gray-600 mt-1 hidden lg:block">
                    <%= yield :page_description %>
                  </p>
                <% end %>
              </div>
            </div>
            
            <!-- Company info -->
            <div class="flex items-center space-x-4">
              <div class="hidden sm:flex items-center space-x-2 text-sm text-gray-500">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                <span><%= ActsAsTenant.current_tenant&.name || 'Company' %></span>
              </div>
            </div>
          </div>
        </header>

        <!-- Page Content -->
        <div class="p-6">
          <!-- Flash Messages -->
          <% if flash[:notice] %>
            <div class="mb-6 rounded-lg border border-green-200 bg-green-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-green-800"><%= flash[:notice] %></p>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if flash[:alert] %>
            <div class="mb-6 rounded-lg border border-red-200 bg-red-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-red-800"><%= flash[:alert] %></p>
                </div>
              </div>
            </div>
          <% end %>

          <%= yield %>
        </div>
      </main>
    </div>

    <!-- Mobile menu overlay -->
    <div id="mobile-overlay" class="fixed inset-0 z-30 lg:hidden opacity-0 pointer-events-none"></div>

    <script>
      (function() {
        // Check if already initialized to prevent conflicts
        if (window.mobileMenuInitialized) return;
        window.mobileMenuInitialized = true;
        
        function toggleMobileMenu() {
          const sidebar = document.getElementById('sidebar');
          const overlay = document.getElementById('mobile-overlay');
          
          if (sidebar && overlay) {
            sidebar.classList.toggle('-translate-x-full');
            overlay.classList.toggle('opacity-0');
            overlay.classList.toggle('pointer-events-none');
          }
        }

        function initializeMobileMenu() {
          // Use event delegation for mobile menu button
          document.addEventListener('click', function(e) {
            if (e.target.closest('#mobile-menu-button')) {
              e.preventDefault();
              toggleMobileMenu();
            }
            
            if (e.target.closest('#mobile-overlay')) {
              toggleMobileMenu();
            }
          });

          // Close mobile menu on window resize
          window.addEventListener('resize', () => {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('mobile-overlay');
            
            if (sidebar && overlay) {
              if (window.innerWidth >= 1024) {
                // Desktop: ensure sidebar is visible and overlay is hidden
                sidebar.classList.remove('-translate-x-full');
                overlay.classList.add('opacity-0');
                overlay.classList.add('pointer-events-none');
              } else {
                // Mobile: ensure sidebar is hidden and overlay is hidden
                sidebar.classList.add('-translate-x-full');
                overlay.classList.add('opacity-0');
                overlay.classList.add('pointer-events-none');
              }
            }
          });
        }

        // Initialize for both DOMContentLoaded and Turbo navigation
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', initializeMobileMenu);
        } else {
          initializeMobileMenu();
        }
        
        // Handle Turbo navigation
        document.addEventListener('turbo:load', initializeMobileMenu);
      })();
    </script>
  </body>
</html>