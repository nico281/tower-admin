<% content_for :page_title, "User Details" %>
<% content_for :page_description, "View and manage user information" %>

<div>
  <!-- Header with Back Navigation -->
  <div class="mb-6 flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <%= link_to users_path, 
          class: "inline-flex items-center px-3 py-2 text-sm font-medium text-gray-600 bg-white border border-gray-300 rounded-lg shadow-sm hover:bg-gray-50 hover:text-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Users
      <% end %>
    </div>
  </div>

  <!-- Success Notice -->
  <% if notice %>
    <div class="mb-6 rounded-lg border border-green-200 bg-green-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- User Details -->
  <div class="bg-white shadow-xl rounded-xl border border-gray-200 overflow-hidden">
    <!-- Header -->
    <div class="px-6 py-4 bg-gradient-to-r from-indigo-600 to-purple-600">
      <div class="flex items-center space-x-4">
        <div class="w-16 h-16 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div>
          <h2 class="text-xl font-semibold text-white"><%= @user.email %></h2>
          <p class="text-indigo-100 text-sm mt-1">User account information</p>
        </div>
      </div>
    </div>

    <!-- User Information -->
    <div class="px-6 py-6 space-y-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Role -->
        <div class="space-y-2">
          <label class="block text-sm font-semibold text-gray-700">Role</label>
          <div class="flex items-center space-x-2">
            <div class="flex items-center px-3 py-2 bg-indigo-50 border border-indigo-200 rounded-lg">
              <svg class="w-4 h-4 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-sm font-medium text-indigo-800 capitalize">
                <%= @user.role&.humanize || "No role assigned" %>
              </span>
            </div>
          </div>
        </div>

        <!-- Company -->
        <div class="space-y-2">
          <label class="block text-sm font-semibold text-gray-700">Company</label>
          <div class="flex items-center space-x-2">
            <div class="flex items-center px-3 py-2 bg-gray-50 border border-gray-200 rounded-lg">
              <svg class="w-4 h-4 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <span class="text-sm font-medium text-gray-800">
                <%= @user.company&.name || "No company assigned" %>
              </span>
            </div>
          </div>
        </div>

        <!-- Created Date -->
        <div class="space-y-2">
          <label class="block text-sm font-semibold text-gray-700">Created</label>
          <div class="flex items-center space-x-2">
            <div class="flex items-center px-3 py-2 bg-gray-50 border border-gray-200 rounded-lg">
              <svg class="w-4 h-4 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4h3a2 2 0 012 2v1a2 2 0 01-2 2H6a2 2 0 01-2-2V9a2 2 0 012-2h2z" />
              </svg>
              <span class="text-sm font-medium text-gray-800">
                <%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </span>
            </div>
          </div>
        </div>

        <!-- Last Updated -->
        <div class="space-y-2">
          <label class="block text-sm font-semibold text-gray-700">Last Updated</label>
          <div class="flex items-center space-x-2">
            <div class="flex items-center px-3 py-2 bg-gray-50 border border-gray-200 rounded-lg">
              <svg class="w-4 h-4 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-sm font-medium text-gray-800">
                <%= @user.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex items-center justify-between">
      <div class="text-sm text-gray-500">
        User management actions
      </div>
      <div class="flex space-x-3">
        <%= link_to edit_user_path(@user), 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Edit User
        <% end %>
        
        <%= button_to @user, 
            method: :delete, 
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out",
            data: { 
              confirm: "Are you sure you want to delete this user? This action cannot be undone.",
              turbo_confirm: "Are you sure you want to delete this user? This action cannot be undone."
            } do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Delete User
        <% end %>
      </div>
    </div>
  </div>
</div>