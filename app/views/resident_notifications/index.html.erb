<% content_for :title, "My Notifications" %>
<% content_for :page_title, "My Notifications" %>
<% content_for :page_description, "View all your building notifications and updates" %>

<div>
  <!-- Header -->
  <div class="mb-6 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
    <div class="flex-1">
      <h1 class="text-xl sm:text-2xl font-bold text-gray-900 lg:hidden">My Notifications</h1>
      <p class="text-sm text-gray-600 lg:hidden mt-1">View all your building notifications and updates</p>
    </div>
    <div class="flex items-center space-x-3 w-full sm:w-auto">
      <div class="text-sm text-gray-500">
        <% unread_count = @notification_recipients.count { |nr| nr.unread? } %>
        <% total_count = @notification_recipients.count %>
        <%= unread_count %> unread of <%= total_count %> total
      </div>
    </div>
  </div>

  <!-- Success Notice -->
  <% if notice %>
    <div class="mb-6 rounded-lg border border-green-200 bg-green-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Notifications List -->
  <div class="bg-white shadow-xl rounded-xl border border-gray-200 overflow-hidden">
    <% if @notification_recipients.any? %>
      <div class="divide-y divide-gray-200">
        <% @notification_recipients.each do |notification_recipient| %>
          <% notification = notification_recipient.notification %>
          <div class="p-4 sm:p-6 <%= notification_recipient.unread? ? 'bg-blue-50' : 'hover:bg-gray-50' %> transition duration-150 ease-in-out">
            <div class="flex items-start space-x-3">
              <!-- Notification Icon -->
              <div class="flex-shrink-0">
                <div class="w-10 h-10 bg-gradient-to-r 
                  <% case notification.priority %>
                  <% when 'urgent' %>
                    from-red-500 to-red-600
                  <% when 'high' %>
                    from-orange-500 to-orange-600
                  <% when 'normal' %>
                    from-blue-500 to-blue-600
                  <% else %>
                    from-gray-500 to-gray-600
                  <% end %>
                  rounded-lg flex items-center justify-center">
                  <% if notification_recipient.unread? %>
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <circle cx="12" cy="12" r="8"/>
                    </svg>
                  <% else %>
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  <% end %>
                </div>
              </div>

              <!-- Notification Content -->
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center space-x-2 mb-1">
                      <h3 class="text-lg font-semibold text-gray-900 truncate">
                        <%= notification.title %>
                      </h3>
                      <% if notification_recipient.unread? %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          New
                        </span>
                      <% end %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium 
                        <% case notification.priority %>
                        <% when 'urgent' %>
                          bg-red-100 text-red-800
                        <% when 'high' %>
                          bg-orange-100 text-orange-800
                        <% when 'normal' %>
                          bg-blue-100 text-blue-800
                        <% else %>
                          bg-gray-100 text-gray-800
                        <% end %>
                        ">
                        <%= notification.priority.humanize %>
                      </span>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <%= notification.notification_type.humanize %>
                      </span>
                    </div>
                    
                    <p class="text-gray-700 text-sm mb-3 line-clamp-2">
                      <%= truncate(notification.message, length: 150) %>
                    </p>
                    
                    <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-xs text-gray-500">
                      <div class="flex items-center">
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4h3a2 2 0 012 2v1a2 2 0 01-2 2H6a2 2 0 01-2-2V9a2 2 0 012-2h2z" />
                        </svg>
                        <%= time_ago_in_words(notification.created_at) %> ago
                      </div>
                      <div class="flex items-center">
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        From <%= notification.sender.display_name %>
                      </div>
                      <% if notification_recipient.read? %>
                        <div class="flex items-center">
                          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                          Read <%= time_ago_in_words(notification_recipient.read_at) %> ago
                        </div>
                      <% end %>
                    </div>
                  </div>
                  
                  <!-- Actions -->
                  <div class="flex items-center space-x-2 ml-4">
                    <%= link_to resident_notification_path(notification_recipient), 
                        class: "inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
                      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                      Read
                    <% end %>
                    
                    <% if notification_recipient.unread? %>
                      <%= link_to mark_as_read_resident_notification_path(notification_recipient), method: :patch,
                          class: "inline-flex items-center px-3 py-1.5 border border-transparent shadow-sm text-xs font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Mark Read
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <%= render 'shared/pagy_pagination', 
          pagy: @pagy,
          item_name: "notifications" %>
    <% else %>
      <div class="text-center py-12">
        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM4.828 4.828A4 4 0 015.5 4H9l1 1 1-1h3.5a4 4 0 01.672.828M4.828 4.828L4 12l.828 7.172M4.828 4.828A4 4 0 014 8v4m15.172 7.172A4 4 0 0120 16v-4a4 4 0 00-.828-3.172M19.172 19.172L20 12l-.828-7.172M19.172 19.172A4 4 0 0115.5 20H12l-1-1-1 1H6.5a4 4 0 01-3.672-.828" />
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No notifications yet</h3>
        <p class="text-gray-500 mb-6">You'll see building updates and important announcements here.</p>
      </div>
    <% end %>
  </div>
</div>